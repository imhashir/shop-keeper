<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hashirbaig.creator.shopkeeper">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".HostingActivities.CustomerInfoActivity"
                  android:label="@string/customer_info_activity"/>

        <activity android:name=".HostingActivities.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/HomeTheme">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity android:name=".HostingActivities.ProductInfoActivity"
            android:label="@string/product_info_activity"/>
    </application>

</manifest>